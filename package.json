{
  "name": "farmease-simple",
  "version": "1.0.0",
  "description": "Simplified Smart Farming Platform",
  "scripts": {
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && pip install -r requirements.txt",
    "install:all": "npm run install:frontend && npm run install:backend",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && python app.py",
    "setup:db": "cd backend && python setup_database.py",
    "build": "cd frontend && npm run build"
  },
  "keywords": ["farming", "agriculture", "react", "flask", "mysql"],
  "author": "FarmEase Team",
  "license": "MIT"
}